---
import "../styles/global.css";

type Props = {
  title: string;
  description?: string;
};

const { title, description } = Astro.props;
const pathname = Astro.url.pathname;

const umamiSrc = import.meta.env.PUBLIC_UMAMI_SRC;
const umamiWebsiteId = import.meta.env.PUBLIC_UMAMI_WEBSITE_ID;

const navItems = [
    { href: "/", label: "Home" },
    { href: "/about", label: "About" },
    { href: "/items", label: "Items" },
    { href: "/overview", label: "Overview" },
    { href: "/story-and-setting", label: "Story & Setting" },
    { href: "/gameplay", label: "Gameplay" },
    { href: "/early-access", label: "Early Access" },
  ];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    {description ? <meta name="description" content={description} /> : null}
    <title>{title}</title>
    {umamiSrc && umamiWebsiteId ? (
      <script defer src={umamiSrc} data-website-id={umamiWebsiteId}></script>
    ) : null}
  </head>
  <body class="min-h-screen bg-slate-950 text-slate-100 antialiased">
    <div class="sticky top-0 z-40 border-b border-slate-800 bg-slate-950/90 px-6 py-4 backdrop-blur md:hidden">
      <div class="mx-auto flex max-w-6IPxl items-center justify-between">
        <div>
          <p class="text-xs uppercase tracking-[0.3em] text-slate-400">Wiki</p>
          <p class="text-sm font-semibold text-white">No Rest For The Wicked</p>
        </div>
        <button
          id="mobile-nav-toggle"
          class="rounded-full border border-slate-700 bg-slate-900/60 px-4 py-2 text-xs font-semibold text-slate-100"
          aria-expanded="false"
          aria-controls="mobile-nav"
          type="button"
        >
          Menu
        </button>
      </div>
    </div>

    <div
      id="mobile-nav"
      class="fixed inset-0 z-50 hidden md:hidden"
      role="dialog"
      aria-modal="true"
      aria-label="Site navigation"
    >
      <button class="absolute inset-0 bg-slate-950/70" data-nav-close type="button"></button>
      <aside class="absolute left-0 top-0 h-full w-72 max-w-[85%] overflow-y-auto border-r border-slate-800 bg-slate-950 p-5 shadow-2xl">
        <div class="flex items-start justify-between gap-4">
          <div>
            <p class="text-xs uppercase tracking-[0.3em] text-slate-400">Wiki</p>
            <h2 class="mt-2 text-lg font-semibold text-white">No Rest For The Wicked</h2>
          </div>
          <button
            class="rounded-full border border-slate-700 bg-slate-900/60 px-3 py-1 text-xs font-semibold text-slate-100"
            data-nav-close
            type="button"
          >
            Close
          </button>
        </div>
        <nav class="mt-6 flex flex-col gap-2 text-sm">
          {navItems.map((item) => (
            <a
              class:list={[
                "rounded-lg px-3 py-2 transition",
                pathname === item.href
                  ? "bg-white/10 text-white"
                  : "text-slate-300 hover:bg-white/5 hover:text-white",
              ]}
              href={item.href}
            >
              {item.label}
            </a>
          ))}
        </nav>
        <div class="mt-6 border-t border-slate-800 pt-4 text-xs text-slate-400">
          <p class="leading-relaxed">
            Unofficial fan wiki for No Rest For The Wicked. Not affiliated with or
            endorsed by the creators or publisher of No Rest For The Wicked.
          </p>
        </div>
      </aside>
    </div>

    <div class="mx-auto flex min-h-screen max-w-6IPxl flex-col gap-8 px-4 py-6 md:flex-row md:gap-10 md:px-6 md:py-10">
      <aside class="hidden md:block md:w-56 md:mt-16">
        <div class="rounded-2xl border border-slate-800 bg-slate-900/60 p-5">
          <p class="text-xs uppercase tracking-[0.3em] text-slate-400">Wiki</p>
          <h2 class="mt-2 text-lg font-semibold text-white">No Rest For The Wicked</h2>
          <nav class="mt-5 flex flex-col gap-2 text-sm">
            {navItems.map((item) => (
              <a
                class:list={[
                  "rounded-lg px-3 py-2 transition",
                  pathname === item.href
                    ? "bg-white/10 text-white"
                    : "text-slate-300 hover:bg-white/5 hover:text-white",
                ]}
                href={item.href}
              >
                {item.label}
              </a>
            ))}
          </nav>
          <div class="mt-6 border-t border-slate-800 pt-4 text-xs text-slate-400">
            <p class="leading-relaxed">
              Unofficial fan wiki for No Rest For The Wicked. Not affiliated with or
              endorsed by the creators or publisher of No Rest For The Wicked.
            </p>
          </div>
        </div>
      </aside>
      <div class="flex-1">
        <slot />
      </div>
    </div>

    <script>
      const navToggle = document.getElementById("mobile-nav-toggle");
      const mobileNav = document.getElementById("mobile-nav");
      const closeButtons = mobileNav?.querySelectorAll("[data-nav-close]") ?? [];

      const setNavOpen = (open) => {
        if (!mobileNav || !navToggle) return;
        mobileNav.classList.toggle("hidden", !open);
        document.body.classList.toggle("overflow-hidden", open);
        navToggle.setAttribute("aria-expanded", String(open));
      };

      navToggle?.addEventListener("click", () => setNavOpen(true));
      closeButtons.forEach((button) =>
        button.addEventListener("click", () => setNavOpen(false))
      );
      document.addEventListener("keydown", (event) => {
        if (event.key === "Escape") setNavOpen(false);
      });
    </script>
  </body>
</html>
